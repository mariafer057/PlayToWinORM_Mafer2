<!-- Definindo se é um form de att, ou de cadastro -->
{{#if jogo}} 
  <h1>Atualizar Games</h1>
  <form action="/jogos/{{jogo.id}}/update" method="post">
{{else}}
  <h1>Cadastrar Games</h1>
  <form action="/jogos/novo" method="post">
{{/if}}
   <div>
      <label for="titulo">Titulo:</label>
      <input type="text" id="titulo" name="titulo" value="{{jogo.titulo}}"/>
    </div>
      <div>
        <label for="descricao">Descrição:</label>
        <input type="text" id="descricao" name="descricao" value="{{jogo.descricao}}" />
      </div>
      <div>
        <label for="preco">Preço:</label>
        <input type="double" id="preco" name="preco" value="{{jogo.preco}}" />
      </div>

      {{#if jogo}}
      <input type="submit" value="Salvar">
      {{else}}
            <input type="submit" value="Enviar">
{{/if}}
    </form>
  